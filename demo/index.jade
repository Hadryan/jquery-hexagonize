doctype html
html
  head
    title jQuery Hexagonize
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js')
    script(src='../dist/jquery.hexagonize.js')
    style(type="text/css").
      .wrapper {
        width: 118px;
        height: 127px;
        margin: 5px;
        display: inline-block;
        position: relative;
      }

      .overlay {
        width: 100%;
        height: 100%;
        position: absolute;
        top: 30%;
        font-weight: bold;
        color: #000;
        opacity: 0;
        transition: opacity 0.25s ease-in-out;
      }
      .wrapper:hover .overlay {
        opacity: 1
      }
  body
    - for(var i=0; i<5; ++i)
      .row
        - for(var j=0; j<5; ++j)
          .wrapper
            .element(
              data-img-url="http://placekitten.com/300/300"
              data-img-hover-url="http://placekitten.com/301/301")
            .overlay
              .overlayBody Sample
    
    script(type="text/javascript").
      $(function() {
        $(".element").each(function(){
          $(this).hexagonize({
            width: 118,
            height: 118*1.5,
            hover_target: $(this).parent()
          });  
        });
      });
